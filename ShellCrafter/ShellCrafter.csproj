<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

	<PropertyGroup>
		<PackageId>ShellCrafter</PackageId>
		<Version>0.0.1</Version>
		<Authors>James P. Henry</Authors>
		<Company>jamesphenry</Company>
		<Description>A fluent C# builder API for executing external processes and shell commands with ease and clarity.</Description>
		<Copyright>Copyright (c) Your jamesphenry 2025</Copyright>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageProjectUrl>https://github.com/YourGitHubUsername/ShellCrafter</PackageProjectUrl>
		<RepositoryUrl>https://github.com/YourGitHubUsername/ShellCrafter.git</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>shell process command execute fluent builder cli process-management</PackageTags>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>

	</PropertyGroup>

	<ItemGroup>
		<None Include="..\README.md" Pack="true" PackagePath="\"/>
	</ItemGroup>
</Project>
